<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Item pertama adalah lapisan untuk memberikan efek background dan border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DFEFFF"></solid> <!-- Warna background -->
            <stroke
                android:width="6px"
                android:color="@color/orange" /> <!-- Warna border dan lebar border -->
            <corners android:radius="6px" /> <!-- Jari-jari sudut elemen -->
        </shape>
    </item>
    <!-- Item kedua adalah lapisan untuk memberikan efek bayangan -->
    <item
        android:right="4px"
        android:bottom="4px"
        android:elevation="6dp"> <!-- Nilai elevation untuk memberikan efek tinggi atau kedalaman -->
        <shape android:shape="rectangle">
            <solid android:color="#33000000"></solid> <!-- Warna bayangan, #33 merupakan transparansi (hex 33 adalah sekitar 20%) -->
            <corners android:radius="6px" />
        </shape>
    </item>
</layer-list>
